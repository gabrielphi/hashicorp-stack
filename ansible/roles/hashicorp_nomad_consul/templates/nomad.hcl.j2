datacenter = "{{ nomad_datacenter }}"
data_dir   = "/opt/nomad"

bind_addr = "{{ nomad_bind_addr }}"

server {
  enabled          = true
  bootstrap_expect = 1
}

client {
  enabled           = true
  network_interface = "{{ nomad_network_interface }}"
}

consul {
  address             = "{{ consul_http_addr }}"
  auto_advertise      = true
  server_service_name = "nomad"
  client_service_name = "nomad-client"
}

plugin "docker" {
  config {
    allow_privileged = true
  }
}


